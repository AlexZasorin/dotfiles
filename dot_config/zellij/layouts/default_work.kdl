layout {
    default_tab_template {
        pane size=2 borderless=true {
            plugin location="zjstatus"
        }
        children
    }
    tab name="config" focus=true {
        pane cwd="~/.local/share/chezmoi"
    }
    tab name="notes" {
        pane cwd="~/Repos/notes"
    }
    tab name="relationship-v2" {
        pane cwd="~/Repos/relationship-v2"
    }
    tab name="workflow" {
        pane cwd="~/Repos/workflow"
    }
}
